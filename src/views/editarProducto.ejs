
    <%- include('./partials/head') %>
</head>
<body>

        <%- include('./partials/header') %>

    <main>
        <div class="login_box">
            <div class="logo_contenedor">
                <img src="Imagenes/Logo_PC.png" rel ="icon">
            </div>
          <div>
             <h1>Modificar Producto</h1>
             <form action="/products" method="POST">
                <p><label for="Nombre del producto">
                    <input id="Nombre del producto" type="text" placeholder="Nombre del producto">
                </label></p>
                <div>
                    <p><label for="descripcion">
                        <input id="descripcion" type="text" placeholder="descripcion" name="descripcion">
                    </label></p>
                </div>
                <div>
                    <p><label for="categoria">
                        <select id="categoria" type="text" placeholder="categoria" name="categoria">
                            <option value="1">Nuevo</option>
                            <option value="2">En descuento</option>
                            <option value="3">Restock</option>
                        </select>
                    </label></p>
                </div>
                <div>
                    <p><label for="Precio">
                        <input id="Precio" type="text" placeholder="Precio" name="price">
                    </label></p>
                </div>
                <div>
                    <p><label for="Color">
                        <input id="Color" type="text" placeholder="Color" name="color">
                    </label></p>
                </div>
                <div>
                    <p><label>
                        Imagenes del Producto
                        <input type="file" name="image" accept=".jpg">
                    </label></p>
                </div>
                  <p><input type="submit" value="Continuar"></p>
            </form>
         </div>
        </div>
    </main>

        <%- include('./partials/footer') %> 

</body>
</html>